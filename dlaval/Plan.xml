<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE plan PUBLIC
		"Plan"
		"http://www.devocative.org/dtd/devolcano-plan.dtd">

<plan>
	<packageMap>
		<from pkg="org.devocative.devolcano.test.entity" includeSubPackages="false">
			<!--<to pkgReplace="entity:vo" generatorRef="LVO" genDir="src/test/java"/>-->
			<to pkgReplace="entity:vo" generatorRef="SVO" genDir="src/test/java"/>
			<to pkgReplace="entity:iservice" generatorRef="ServiceI" genDir="src/test/java"/>
			<to pkgReplace="entity:service" generatorRef="ServiceM" genDir="src/test/java"/>
		</from>
	</packageMap>

	<volcanoes>
		<volcano name="SVO">
			<precondition>
				<![CDATA[
				targetClass.normal && targetClass.ok
				]]>
			</precondition>
			<template file="/templates/SVO.gsp"
					  suffix="SVO"
					  genFileType="java"
					  overwrite="check">
				<overwriteCheckString>//overwrite</overwriteCheckString>
			</template>
		</volcano>

		<volcano name="ServiceI">
			<precondition>
				<![CDATA[
				targetClass.normal && targetClass.ok
				]]>
			</precondition>
			<template file="/templates/ServiceInterface.gsp"
					  prefix="I"
					  suffix="Service"
					  genFileType="java"
					  overwrite="check">
				<overwriteCheckString>//overwrite</overwriteCheckString>
			</template>
		</volcano>

		<volcano name="ServiceM">
			<precondition>
				<![CDATA[
				targetClass.normal && targetClass.ok
				]]>
			</precondition>
			<template file="/templates/ServiceMain.gsp"
					  suffix="Service"
					  genFileType="java"
					  overwrite="check">
				<overwriteCheckString>//overwrite</overwriteCheckString>
			</template>
		</volcano>


		<volcano name="LVO">
			<precondition>
				<![CDATA[
				targetClass.normal && targetClass.ok
				]]>
			</precondition>

			<template file="/templates/Test.gsp"
					  prefix="Oops" suffix="LVO"
					  genFileType="java"
					  overwrite="check">
				<overwriteCheckString>//overwrite</overwriteCheckString>
			</template>
		</volcano>
	</volcanoes>

</plan>